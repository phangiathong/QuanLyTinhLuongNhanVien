<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    tools:context=".Interface.MainActivityAccounts">

    <View
        android:background="@drawable/background_home"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/playfairdisplay_italic"
        android:gravity="center"
        android:text="Nhân Viên"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:paddingRight="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/custom_button1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnCheckin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableTop="@drawable/diemdanh"
                        android:gravity="center"
                        android:text="Check in" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/custom_button1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableTop="@drawable/checkout"
                        android:gravity="center"
                        android:text="Check out" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infor"
        android:layout_marginTop="350dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/playfairdisplay_italic"
            android:id="@+id/tvTennv"
            style="@style/tv_title"
            android:background="@drawable/background_all"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <LinearLayout
            style="@style/linear_v"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/playfairdisplay_italic"
                    style="@style/tv_noidung"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="ID nhân viên" />
                <TextView
                    android:id="@+id/tvManv"
                    style="@style/tv_noidung"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/playfairdisplay_italic"
                    style="@style/tv_noidung"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Phòng ban" />
                <TextView
                    android:id="@+id/tvTenPhongBannv"
                    style="@style/tv_noidung"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/playfairdisplay_italic"
                    style="@style/tv_noidung"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Ngày tháng" />
                <TextView
                    android:id="@+id/tvNgayChamCongnv"
                    style="@style/tv_noidung"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


        <Button
            android:id="@+id/btnNVTask"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="600dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_all"
            android:text="Công Việc" />

    <Button
        android:id="@+id/btnLuongNV"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_all"
        android:text="Lương" />

</RelativeLayout>