<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/background_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:fontFamily="@font/playfairdisplay_italic"
        android:id="@+id/tvTenNV"
        style="@style/tv_title"
        android:background="@drawable/custom_button3"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <LinearLayout
        style="@style/linear_v"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Mã" />
            <TextView
                android:id="@+id/tvMaNV"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Phòng ban" />
            <TextView
                android:id="@+id/tvTenPhongBan"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Ngày tháng" />
            <TextView
                android:id="@+id/tvNgayChamCong"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/playfairdisplay_italic"
                style="@style/tv_noidung"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Tổng lương" />
            <TextView
                android:id="@+id/tvThucLanh"
                style="@style/tv_noidung"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>